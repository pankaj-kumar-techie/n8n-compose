# =========================================================================
# n8n Expert Configuration Template
# =========================================================================

# --- PROJECT SETTINGS ---
# Set a unique name if running multiple n8n instances on one server
COMPOSE_PROJECT_NAME=n8n-prod

# --- DOMAIN & SSL (Production Only) ---
DOMAIN_NAME=n8n.example.com
SSL_EMAIL=user@example.com

# --- VERSIONS (Expert Level) ---
# Pin your versions for stability. Check docker.n8n.io for latest.
N8N_VERSION=latest
POSTGRES_VERSION=16-alpine
TRAEFIK_VERSION=v2.10

# --- n8n SECURITY & AUTH ---
# ⚠️ If you change N8N_ENCRYPTION_KEY after first run, n8n will fail.
N8N_ENCRYPTION_KEY=CHANGE_ME_WITH_SETUP_SCRIPT
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=CHANGE_ME_WITH_SETUP_SCRIPT

# --- DATABASE (Postgres) ---
POSTGRES_USER=n8n
POSTGRES_PASSWORD=CHANGE_ME_WITH_SETUP_SCRIPT
POSTGRES_DB=n8n

# --- SYSTEM & TIME ---
GENERIC_TIMEZONE=Asia/Kolkata
TZ=Asia/Kolkata
